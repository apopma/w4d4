<h1>New Album</h1>

<form action='<%= albums_url %>' method='POST'>
  <%= render partial: 'shared/auth' %>

  <label for='album_band_id'>Recording band:</label>
  <select name='album[band_id]' id='album_band_id'>
    <% @bands.each do |band| %>
      <option value="<%= band.id %>">
        <%= band.name %>
      </option>
    <% end %>
  </select><br>

  Live album?
  <label for='album_live_true'>yes</label>
  <input type='radio' name='album[live?]' value=true id='album_live_true'>
  <label for='album_live_false'>no</label>
  <input type='radio' name='album[live?]' value=false id='album_live_false'>
  <br>

  <label for='album_title'>Record your new album's title: (make it great!)</label>
  <input type='text' name='album[title]' id='album_title'>
  <br>

  <input type='submit' value='Release your new album!'>
</form>
